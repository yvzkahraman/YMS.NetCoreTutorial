@model YMS.EfCoreTutorial.Models.CreateEmployeeModel
@{
    Layout = "_Layout";
}



<form method="post" asp-action="Create" asp-controller="Home">
    <div class="mb-3">
        <label  class="form-label">Name :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="@Model.Name" type="text" class="form-control" >
        
    </div>
    <div class="mb-3">
        <label class="form-label">Surname :</label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Surname">
    </div>

    <div asp-validation-summary="All" class="text-danger">

    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
